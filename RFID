#include <LiquidCrystal.>
const int rs = 12, en = 11, d4 = 5, d5 = 4, d6 = 3, d7 = 2;  
LiquidCrystal lcd(rs, en, d4, d5, d6, d7);                    
  lcd.begin(16, 2);              
  lcd.clear(); 
char textmessage[60];
char CARD_1[]="5500B5E57570";
String message="";
void setup() {
  lcd.begin(16, 2);                   
  lcd.clear();    
 Serial.println("rfid reading");
  Serial.begin(9600);
}
void loop()
{
  RFID_CHECK();
  }
   void RFID_CHECK()
   {
   lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("SCAN YOUR HEALTH  ");
    lcd.setCursor(0,1);
    lcd.print("CARD......   ");
 while(1)
 {
    if(Serial.available()>0)
    {
     
      message=Serial.readString();
      int str_len = message.length() + 1;
      char textmessage[12];
      message.toCharArray(textmessage,str_len);
      Serial.println(textmessage);
      textmessage[12]='\0';
      if(!strcmp(textmessage,CARD_1))
       { 
          lcd.clear();
          lcd.setCursor(0,0);
          lcd.print("CARD MATCHED");
          lcd.setCursor(0,1);
          lcd.print("ENTER THE PASSWORD");
          delay(4000);
       }
    }   
}
   }
